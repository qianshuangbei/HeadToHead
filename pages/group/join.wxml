<!--pages/group/join.wxml-->
<view class="container">
  <view class="form-container">
    <view class="form-title">加入Group</view>

    <view class="form-group">
      <label class="form-label">分享码</label>
      <input
        class="form-input"
        placeholder="输入6位分享码，如: ABC123"
        value="{{accessCode}}"
        bindinput="onCodeInput"
        maxlength="6"
        auto-focus
      />
      <text class="form-tips">分享码不区分大小写</text>
    </view>

    <view class="button-group">
      <button
        class="btn btn-primary"
        bindtap="handleJoin"
        disabled="{{!accessCode || loading}}"
      >
        {{loading ? '加入中...' : '加入Group'}}
      </button>
      <button class="btn btn-secondary" bindtap="handleCancel">取消</button>
    </view>
  </view>
</view>
