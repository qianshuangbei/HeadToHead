<!--pages/group/join.wxml-->
<view class="container">
  <view class="content">
    <!-- 标题 -->
    <view class="header">
      <text class="title">加入Group</text>
      <text class="subtitle">通过分享码加入已有的Group</text>
    </view>

    <!-- 输入框 -->
    <view class="input-section">
      <label class="label">分享码</label>
      <input
        class="input"
        placeholder="输入6位分享码，如: ABC123"
        value="{{accessCode}}"
        bindinput="onCodeInput"
        maxlength="6"
        auto-focus
      />
      <text class="tips">分享码不区分大小写</text>
    </view>

    <!-- 信息提示 -->
    <view class="info-box">
      <view class="info-item">
        <text class="icon">1️⃣</text>
        <text>向Group创建者或已有成员获取分享码</text>
      </view>
      <view class="info-item">
        <text class="icon">2️⃣</text>
        <text>输入分享码后即可加入Group</text>
      </view>
      <view class="info-item">
        <text class="icon">3️⃣</text>
        <text>加入后可以查看排名和上传比赛</text>
      </view>
    </view>

    <!-- 操作按钮 -->
    <view class="button-group">
      <button
        class="btn btn-primary"
        bindtap="handleJoin"
        disabled="{{!accessCode || loading}}"
      >
        {{loading ? '加入中...' : '加入Group'}}
      </button>
      <button class="btn btn-secondary" bindtap="handleCancel">
        取消
      </button>
    </view>

    <!-- 或者扫码 -->
    <view class="divider">
      <text>或扫一扫二维码加入</text>
    </view>

    <button class="btn btn-scan" bindtap="handleScanCode">
      📱 扫描二维码
    </button>
  </view>
</view>
