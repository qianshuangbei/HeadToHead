/* pages/challenge/index.wxss */
.challenge-container, page {
  min-height: 100vh;
}
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}
.login-icon {
  font-size: 80px;
  margin-bottom: 30px;
}
.title {
  font-size: 32px;
  font-weight: bold;
  margin-bottom: 10px;
}
.subtitle {
  font-size: 18px;
  opacity: 0.9;
}
