/* pages/profile/index.wxss */

.profile-container {
  min-height: 100vh;
  padding: 40rpx 30rpx 60rpx;
  background: linear-gradient(180deg, #ffffff 0%, #f5f6fb 100%);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.top-section {
  display: flex;
  align-items: center;
  gap: 60rpx;
}

.avatar-wrapper {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 191, 64, 0.6);
  padding: 6rpx;
  background: linear-gradient(135deg, #ff8a7a, #ffd45f);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar {
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
}

.avatar.placeholder {
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  color: #ff8a7a;
  font-weight: 600;
}

.stats {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #222;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.action-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 20rpx;
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.nickname {
  font-size: 44rpx;
  font-weight: 700;
  color: #222;
}

.status {
  font-size: 26rpx;
  color: #777;
}

.location {
  font-size: 26rpx;
  color: #999;
}

.bio {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.edit-btn {
  background: linear-gradient(135deg, #ff8a7a, #ffd45f);
  border: none;
  color: #fff;
  padding: 12rpx 28rpx;
  font-size: 26rpx;
  border-radius: 999rpx;
  box-shadow: 0 10rpx 20rpx rgba(255, 138, 122, 0.2);
}

.highlight {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  color: #444;
}

.highlight-item {
  padding: 14rpx 24rpx;
  background: rgba(34, 34, 34, 0.05);
  border-radius: 999rpx;
  font-size: 24rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(255, 138, 122, 0.12);
  color: #ff6b5c;
  font-size: 24rpx;
}
