/* pages/profile/index.wxss */
page {
  background-color: #f5f5f5;
}

.profile-container {
  min-height: 100vh;
  padding: 0rpx 0rpx 60rpx;
  background-color: #f5f5f5;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.top-section {
  display: flex;
  align-items:baseline;
  padding: 24px 24px;
  background: linear-gradient(135deg, #667eea, #764ba2);
  gap: 24rpx;
}

.avatar-wrapper {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(102, 126, 234, 0.45);
  padding: 6rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar {
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
}

.avatar.placeholder {
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  color: #667eea;
  font-weight: 600;
}

.stats {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.action-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 20rpx;
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 0rpx 20rpx 60rpx;
}

.nickname {
  font-size: 44rpx;
  font-weight: 700;
  color: #222;
}

.status {
  font-size: 26rpx;
  font-weight: 700;
  color: #222;
}

.location {
  font-size: 26rpx;
  color: #999;
}

.bio {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.edit-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border: none;
  color: #fff;
  padding: 12rpx 28rpx;
  font-size: 26rpx;
  border-radius: 999rpx;
  box-shadow: 0 10rpx 20rpx rgba(102, 126, 234, 0.28);
}

.highlight {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: rgba(255, 255, 255, 0.8);
}

.highlight-item {
  padding: 14rpx 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #ffffff;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.12);
  color: #ffffff;
  font-size: 24rpx;
}
