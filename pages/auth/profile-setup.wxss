/* pages/auth/profile-setup.wxss - Apple Design Style */
page {
  background-color: #f2f2f7;
}

.profile-edit-page {
  min-height: 100vh;
  background: #f2f2f7;
}

.edit-scroll {
  height: 100vh;
  box-sizing: border-box;
  padding: 40rpx 32rpx 80rpx;
}

.hero {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.avatar-panel {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  object-fit: cover;
  background-color: #e5e5ea;
}

.avatar-placeholder {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background: #e5e5ea;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #8e8e93;
  font-size: 26rpx;
  font-weight: 500;
}

.avatar-overlay {
  position: absolute;
  bottom: 0;
  padding: 8rpx 20rpx;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(20rpx);
  color: #fff;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.form-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 0;
  display: flex;
  flex-direction: column;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.section {
  display: flex;
  flex-direction: column;
  padding: 32rpx 28rpx;
  border-bottom: 1rpx solid #e5e5ea;
}

.section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1c1c1e;
  margin-bottom: 24rpx;
  letter-spacing: -0.2rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.item-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #3c3c43;
  letter-spacing: -0.2rpx;
}

.item-input,
.item-textarea {
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e5e5ea;
  background: #ffffff;
  color: #1c1c1e;
  font-size: 28rpx;
  font-weight: 400;
  transition: all 0.2s ease;
}

.item-input:focus,
.item-textarea:focus {
  border-color: #007aff;
  background: #f9f9f9;
}

.item-input::placeholder,
.item-textarea::placeholder {
  color: #c7c7cc;
}

.item-textarea {
  min-height: 120rpx;
  line-height: 1.5;
}

.char-count {
  align-self: flex-end;
  font-size: 22rpx;
  color: #8e8e93;
  margin-top: -6rpx;
}

.segment {
  display: flex;
  gap: 12rpx;
  padding: 6rpx;
  background: #f2f2f7;
  border-radius: 12rpx;
}

.segment-option {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 0;
  border-radius: 8rpx;
  background: transparent;
  color: #1c1c1e;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.segment-option.active {
  background: #ffffff;
  color: #007aff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.segment-option radio {
  display: none;
}

.tags-item {
  gap: 16rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  background: #f2f2f7;
  border: 1rpx solid #e5e5ea;
}

.tag-text {
  color: #1c1c1e;
  font-size: 24rpx;
  font-weight: 500;
}

.tag-remove {
  color: #ff3b30;
  font-size: 22rpx;
  font-weight: 500;
}

.error {
  margin-top: 24rpx;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  background: #fff5f5;
  border: 1rpx solid #ffe5e5;
  color: #ff3b30;
  text-align: center;
  font-size: 24rpx;
  font-weight: 500;
}

.actions {
  margin-top: 32rpx;
}

.save-btn {
  width: 100%;
  border: none;
  border-radius: 12rpx;
  padding: 28rpx 0;
  background: #007aff;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: -0.2rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.2);
  transition: all 0.2s ease;
}

.save-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}
