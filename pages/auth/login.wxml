<!-- pages/auth/login.wxml -->
<view class="login-prompt">
  <view class="login-icon">🎾</view>
  <text class="title">HeadToHead</text>
  <text class="subtitle"></text>
  <button wx:if="{{showLoginPrompt}}" class="login-btn" bindtap="handleLogin">微信登录</button>
</view>

<!-- 可加加载状态 -->
<view wx:if="{{checking}}" class="checking">正在检查账户...</view>

<!-- 登录后选择资料方式底部浮层 -->
<view class="choice-sheet" wx:if="{{showChoiceSheet}}">
  <view class="sheet-content">
    <view class="sheet-title">首次资料设置</view>
    <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
      <image class="avatar" src="{{avatarUrl}}"></image>
    </button> 
    <input type="nickname" class="weui-input" placeholder="请输入昵称" value="{{nickname}}" bindinput="onNicknameInput"/>
  </view>
</view>
